<!-- Declare Views Here -->
<!-- .controller.App: Will search for file with App.controller prefix -->
<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <!-- <Shell>: Add Fiori background -->
    <Shell>
        <App class="myAppDemoWT">
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <!-- Reference from external XML view file -->
                        <mvc:XMLView
                            viewName="sap.ui.demo.walkthrough.view.HelloPanel" />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

    <!-- Example: Display Text -->
    <!-- <Text text="Hello UI5 from xml view!" /> -->
</mvc:View>